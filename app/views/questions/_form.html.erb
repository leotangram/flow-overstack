<%= form_for :question, url: questions_path do |f| %>
	<p>
		<%= f.label :title %> :
		<%= f.text_field :title %>
	</p>	
	<p>
		<%= f.label :description %> :<br>
		<%= f.text_area :description %>
	</p>

	<p>
		<%= f.submit "Make question", class: "btn btn-primary" %>
	</p>

<% end %>

<%= link_to 'Volver', questions_path, class: "btn btn-primary" %>


